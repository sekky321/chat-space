.side
  .side__user-name 
    %h3.side__user-name__name
      = current_user.name
    %ul.side__user-name__name__right
      %li.list
        = link_to new_group_path do
          = icon('fa','edit', class: 'icon')
      %li.list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side__group-list
    - current_user.groups.each do |group|
      .side__group-list__group
        = link_to group_messages_path(group) do
          .side__group-list__group__name
            = group.name
          .side__group-list__group__group
            = group.show_last_message